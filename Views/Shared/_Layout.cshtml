<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CEPAW.NewsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CEPAW.NewsApp.styles.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('https://png.pngtree.com/thumb_back/fw800/background/20210902/pngtree-blue-technology-news-background-image_782264.jpg'); /* Ruta a tu imagen de fondo */
            background-size: cover; /* Cubre todo el fondo */
            background-position: center; /* Centra la imagen */
            background-repeat: no-repeat; /* No se repite */
            background-attachment: fixed; /* Fondo fijo mientras se desplaza */
        }

        {
            background-color: #f8f9fa; /* Color de fondo ligero */
        }

        .navbar {
            background-color: #062863; /* Fondo oscuro para la barra de navegación */
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0); /* Sombra suave */
        }

        .navbar-brand {
            color: #ffffff; /* Texto blanco para el nombre del sitio */
            font-weight: bold; /* Texto en negrita */
        }

        .navbar-nav .nav-link {
            color: #ffffff; /* Texto blanco para los enlaces de navegación */
        }

            .navbar-nav .nav-link:hover {
                color: #f8f9fa; /* Texto claro al pasar el ratón */
            }

        main {
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Sombra sutil */
        }

        .card {
            background-color: #ffffff; /* Fondo blanco para las tarjetas */
            border: none; /* Sin borde */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
            transition: transform 0.2s; /* Transición suave al pasar el ratón */
        }

            .card:hover {
                transform: translateY(-5px); /* Efecto de levantamiento al pasar el ratón */
            }

        .card-title {
            color: #000000; /* Color oscuro para el título de la tarjeta */
            font-size: 1.2rem;
            font-weight: bold;
        }

        .card-text {
            color: #ffff; /* Color de texto gris oscuro */
            font-size: 0.9rem;
        }

        .btn-primary {
            background-color: #007bff; /* Color azul primario */
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Color azul más oscuro al pasar el ratón */
                border-color: #0056b3;
            }

        footer {
            background-color: #000000; /* Fondo oscuro para el pie de página */
            color: #ffffff; /* Texto blanco para el pie de página */
            padding: 10px 0;
        }

            footer a {
                color: #ffffff; /* Enlaces blancos en el pie de página */
            }

                footer a:hover {
                    color: #f8f9fa; /* Color claro al pasar el ratón */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CEPAW.NewsApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <div class="container">
            <p>&copy; 2024 - CEPAW.NewsApp - <a class="text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
